{% extends 'base.html.twig' %}

{% block title %}Product Details{% endblock %}

{% block body %}
{% include '_partials/_nav.html.twig' %}
<div class="example-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card my-3" style="max-width: 1000px; height: 1000px;">
                    <div class="row g-4">
                        <div class="col-md-4">
                            <img src="..." class="img-fluid rounded-start" alt="...">
                        </div>
                        <div class="col-md-8">
                                <div class="card-body my-5">
                                <h5 class="card-title">{{product.name}}</h5>
                                <p class="card-text">{{product.description}}</p>
                                <h5 style="font-weight:700; color:#ef233c;">{{product.price}} $</h5>
                                <p class="text-muted"> only {{product.stock}} in stock </p>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 

{% endblock %}
